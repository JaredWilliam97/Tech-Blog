<div class="container">

  <section class="card">
    <div class="card-header">
      <h2>Edit Post</h2>
    </div>
    <form id="edit-form" class="card-body d-flex flex-column mb-0">

      <input type="hidden" name="post-id" id="id" value="{{post.id}}" />

      <label class="form-label" for="post-title">Title</label>
      <input
        type="text"
        name="post-title"
        id="title"
        class="form-input"
        value="{{post.title}}"
      />

      <label class="form-label" for="post-text">Text</label>
      <textarea
        name="post-text"
        id="text"
        class="form-input"
      >{{post.text}}</textarea>
      <div class="d-flex align-self-end">
        <div class="m-3">
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
        <div class="m-3">
          <button
            type="button"
            id="delete-btn"
            class="btn btn-danger"
          >Delete</button>
        </div>
      </div>
    </form>
  </section>
</div>

<script src="/js/edit.js"></script>