<div class="container">
  <h1>Tech Blog Home</h1>
  <div class="posts">
    {{#each posts}}
      <article class="card mt-3">
        <div class="card-header d-flex justify-content-between">
          <h2>
            <a href="/post/{{id}}">{{title}}</a>
          </h2>
          <div class="align-self-end">
            Posted by
            {{user.username}}
            on
            {{format_date createdAt}}
          </div>
        </div>
        <div class="card-body">
          {{text}}
        </div>
      </article>
    {{/each}}
  </div>

</div>